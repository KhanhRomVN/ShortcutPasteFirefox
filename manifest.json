{
  "manifest_version": 3,
  "name": "ShortcutPaste",
  "version": "1.0.0",
  "description": "Quick paste favorite clipboard item",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "clipboardRead",
    "clipboardWrite",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; connect-src 'self' https://tasks.googleapis.com https://www.googleapis.com https://sheets.googleapis.com https://api.open-meteo.com https://oauth2.googleapis.com https://*.gstatic.com https://nominatim.openstreetmap.org https://*.tile.openstreetmap.org https://server.arcgisonline.com;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ShortcutPaste"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content-main.js",
        "assets/*",
        "icon-16.png",
        "icon-48.png",
        "icon-128.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "paste_favorite_clipboard": {
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "MacCtrl+Shift+V"
      },
      "description": "Paste favorite clipboard item"
    }
  }
}