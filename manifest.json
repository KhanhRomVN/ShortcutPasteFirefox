{
  "manifest_version": 2,
  "name": "ShortcutPaste",
  "version": "1.0.0",
  "description": "Quick paste favorite clipboard item",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage", 
    "notifications",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["serviceWorker.js"],
    "persistent": false
  },
  
  "content_security_policy": "script-src 'self'; object-src 'none';",
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ShortcutPaste",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  
  "web_accessible_resources": [
    "content-main.js",
    "assets/*",
    "icon-16.png",
    "icon-48.png",
    "icon-128.png"
  ],
  
  "commands": {
    "paste_favorite_clipboard": {
      "suggested_key": {
        "default": "Ctrl+Alt+V",
        "mac": "Command+Alt+V",
        "linux": "Ctrl+Alt+V"
      },
      "description": "Paste favorite clipboard item"
    }
  },
  
  "applications": {
    "gecko": {
      "id": "shortcutpaste@example.com",
      "strict_min_version": "109.0"
    }
  }
}